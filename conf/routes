# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index
GET     /login                      @controllers.Application.login
GET     /user-exists                @controllers.Application.userExists
GET     /user-unverified            @controllers.Application.userUnverified
GET     /user/info                  @controllers.Application.userInfo

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /upload                     @controllers.FileUpload.getUpload
POST    /upload/                    @controllers.FileUpload.postUpload(folder="")
POST    /upload/*folder             @controllers.FileUpload.postUpload(folder)

GET     /filestore/notifications    @controllers.FileStoreAsync.notifications
GET     /filestore/tree             @controllers.FileStore.tree

# play-authenticate
GET     /logout                     com.feth.play.module.pa.controllers.Authenticate.logout
GET     /authenticate/:provider     com.feth.play.module.pa.controllers.Authenticate.authenticate(provider: String)
GET     /authenticate/:provider/denied     @controllers.Application.oAuthDenied(provider: String)

