<span class="counter-button input-prepend" title="{tooltip}">
  <button class="btn {activeClass}">
    <i class="icon-{icon}"></i> {title}
  </button>
  <span class="uneditable-input clickable"
    title="{title}"
    data-html="true"
    data-toggle="popover"
    data-placement="bottom"
    data-trigger="click">
    {count}
  </span>
</span>